{
  "manifest_version": 2,
  "name": "chippichippi",
  "version": "1.0",

  "description": "turns every image and video currently visible into the funy cat",

  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["chipi.js"]
    }
  ]
}
