{
  "manifest_version": 2,
  "name": "idkyet",
  "version": "1.0",

  "description": "turns every instance of an image and video into a specific GIF",

  "permissions": ["activeTab"],
  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["chipi.js"]
    }
  ]
}
